{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Batistack APP",
  "version": "1.11.0",
  "identifier": "com.batistack.dev",
  "build": {
    "frontendDist": "../public",
    "devUrl": "http://127.0.0.1:50000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Batistack",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "android": {
        "versionCode": 100
    }
  }
}
